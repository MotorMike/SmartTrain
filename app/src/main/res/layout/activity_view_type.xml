<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.smarttrain.smarttrain.ViewType">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exercise Name"
        android:textSize="34sp"
        android:textColor="#81C784"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/exNameTextView" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:src="@drawable/edit"
        android:background="#81C784"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/imageButton13" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exercise Description up to 240 characters"
        android:id="@+id/exDescriptionTextView"
        android:textSize="24sp"
        android:layout_weight="1"
        android:layout_below="@+id/imageButton13"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />

    <View
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="#81C784"
        android:padding="10dp"
        android:layout_weight="1"
        android:layout_below="@+id/exDescriptionTextView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This exercise is measured in units."
        android:textSize="24sp"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/exDescriptionTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/unitsTextView" />

</RelativeLayout>
